---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Steps from '~/components/widgets/Steps.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import {getPermalink} from '~/utils/permalinks';
import profileImage from '~/assets/images/default.jpg';
import psImage from '~/assets/images/ps.png';
import contaplexImage from '~/assets/images/contaplex.png';
import Contact from "../components/widgets/Contact.astro";

const metadata = {
    title: 'David Lopez - Full-Stack Web Developer',
};
---

<Layout metadata={metadata}>
    <Fragment slot="announcement"></Fragment>

    <!-- Hero2 Widget ******************* -->

    <Hero
            id="hero"
            title="David Lopez"
            tagline="Full-Stack Web Developer"
            actions={[{variant: 'primary', text: 'Hire me', href: getPermalink('/contact#form')}]}
    >
        <Fragment slot="subtitle">
            I fix the dev problems slowing down your business.
        </Fragment>
    </Hero>

    <!-- Content Widget **************** -->

    <Content
            id="about"
            columns={3}
            items={[
                {
                    icon: 'tabler:brand-github',
                    callToAction: {
                        target: '_blank',
                        text: 'Github',
                        href: 'https://github.com/dleo',
                    },
                },
                {
                    icon: 'tabler:brand-upwork',
                    callToAction: {
                        target: '_blank',
                        text: 'Upwork',
                        href: 'https://www.upwork.com/freelancers/davidlopezd',
                    },
                }
            ]}
            image={{
                src: profileImage,
                alt: 'David Lopez',
                loading: 'eager',
                width: 800,
                height: 600,
            }}
    >
        <Fragment slot="content">
            <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About me</h2>
            <p>
                15+ Years. 1,000+ Fixes. Always Shipping.
            </p>
            <br/>
            <p>
                I’m David Lopez, a senior developer with deep experience in Laravel and modern JavaScript frameworks.
                From greenfield SaaS to messy internal tools—I step in, fix what’s broken, and get your team moving
                again.
            </p>
            <br/>
            <p>Explore my projects and contributions on GitHub.</p>
        </Fragment>

        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
        </Fragment>
    </Content>

    <!-- Steps Widget ****************** -->

    <Steps
            id="resume"
            title="Work experience"
            items={[
                {
                    title: `Senior Full-Stack Developer <br /> <span class="font-normal">Freelance / Remote</span> <br /> <span class="text-sm font-normal">2015 - Present</span>`,
                    description: `Deliver tailored Laravel + Vue/React solutions for clients across fintech, edtech, and telecom sectors. <br /> Architect scalable APIs, dashboards, and reverse proxy infrastructures (e.g., MikroTik CCR2216). <br /> Lead technical consulting to identify bottlenecks and convert them into high-performing web systems. <br /> Integrate payment gateways (Stripe, St George Bank, etc.) and automate business processes.`,
                    icon: 'tabler:briefcase',
                },
                {
                    title: `Full-Stack Developer <br /> <span class="font-normal">KernWiFi / Arisa</span> <br /> <span class="text-sm font-normal">2023 - Present</span>`,
                    description: `Develop and maintain internal tools, data dashboards, and alerting systems (Grafana + Portainer). <br /> Extend WHMCS modules with custom provisioning and sponsor integration features. <br /> Write robust Laravel APIs and Vue/React frontends for automated client workflows and system observability.`,
                    icon: 'tabler:briefcase',
                },
                {
                    title: `Network & Backend Engineer <br /> <span class="font-normal">Various ISP and Telecom Projects (LATAM & US)</span> <br /> <span class="text-sm font-normal">2010 - 2015</span>`,
                    description: `Designed and deployed over 1,000 MikroTik RouterBOARD devices worldwide. <br /> Specialized in hotspot management, dynamic scripting, and secure reverse proxy setups. <br /> Combined networking and backend skills to optimize bandwidth and system automation for ISPs.`,
                    icon: 'tabler:briefcase',
                },
            ]}
            classes={{ container: 'max-w-3xl' }}
    />

    <!-- Steps Widget ****************** -->

    <Steps
            id="resume"
            title="Education"
            items={[
                {
                    title: `Certified MikroTik Engineer <br /> <span class="font-normal">MikroTik Training Partner (LATAM)</span> <br /> <span class="text-sm font-normal">2014</span>`,
                    icon: 'tabler:school',
                },
                {
                    title: `Bachelor’s in Computer Engineering <br /> <span class="font-normal">University of Tachira (UNET)</span> <br /> <span class="text-sm font-normal">2002 - 2007</span>`,
                    icon: 'tabler:school',
                },
            ]}
            classes={{ container: 'max-w-3xl' }}
    />

    <!-- Features3 Widget ************** -->

    <Features3
            title="Skills"
            subtitle="Explore the technical expertise I use to solve real business challenges."
            columns={3}
            defaultIcon="tabler:point-filled"
            items={[
                {
                    title: 'Laravel Development',
                    description: '15+ years of experience crafting scalable backends, APIs, and enterprise logic with Laravel.',
                },
                {
                    title: 'Vue.js & React.js',
                    description: 'Expert in building modern, interactive UIs using Vue and React — from dashboards to client portals.',
                },
                {
                    title: 'API Architecture',
                    description: 'Designs and implements robust RESTful APIs that integrate seamlessly with external systems.',
                },
                {
                    title: 'WHMCS Customization',
                    description: 'Builds custom WHMCS modules and payment integrations like St. George Bank and Stripe.',
                },
                {
                    title: 'Network Engineering',
                    description: 'Certified MikroTik Engineer with 1,000+ devices configured, including reverse proxy and hotspot setups.',
                },
                {
                    title: 'Automation & Scripting',
                    description: 'Automates processes using Laravel, Shell scripts, and WHMCS hooks for efficient workflows.',
                },
                {
                    title: 'Grafana + Portainer',
                    description: 'Implements real-time monitoring, dashboards, and alerts to improve observability and performance.',
                },
                {
                    title: 'Performance Optimization',
                    description: 'Identifies bottlenecks and scales infrastructure for better response times and reliability.',
                },
                {
                    title: 'Remote Collaboration',
                    description: 'Delivers high-impact results in distributed teams, with clear communication and autonomy.',
                },
            ]}
    />

    <!-- Content Widget **************** -->

    <Content
            id="portfolio"
            title="Building custom web apps that solve real business problems"
            subtitle="I help startups and growing companies turn complex challenges into scalable, high-performance software—using Laravel, Vue.js, and React. Explore how I bring clarity, speed, and technical leadership to every project."
            isReversed
            items={[
                {
                    title: 'Description:',
                    description: `Built a custom fundraising platform for athletes to manage and promote sponsorship campaigns. The app automates email outreach, integrates payment systems, and supports peer-to-peer referrals to increase fundraising success.`,
                },
                {
                    title: 'Role:',
                    description: `Led full-stack development using Laravel and Vue.js. Architected core modules for campaign management, Stripe integration, email automation, and a business sponsorship search tool powered by Yelp and TripAdvisor scraping.`,
                },
            ]}
            image={{
                src: psImage,
                alt: 'Fundraising App Preview',
            }}
            callToAction={{
                target: '_blank',
                text: 'View live app',
                icon: 'tabler:chevron-right',
                href: 'https://prepsponsor.com',
            }}
    >
        <Fragment slot="content">
            <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
                Project: <br/><span class="text-2xl">PrepSponsor – Athlete Fundraising Platform</span>
            </h3>
        </Fragment>

        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
        </Fragment>
    </Content>

    <!-- Content Widget **************** -->

    <Content
            isReversed
            isAfterContent={true}
            items={[
                {
                    title: 'Description:',
                    description: `Contaplex is a B2B fintech platform that automates accounting workflows and ensures tax and regulatory compliance for LATAM businesses. The tool connects with multiple banks and ERP systems for real-time data sync.`,
                },
                {
                    title: 'Role:',
                    description: `Led the development of a robust financial platform by architecting and implementing critical backend services in Laravel. Integrated external APIs for real-time data reconciliation, electronic invoicing (SII), and advanced financial reporting.`
                },
            ]}
            image={{
                src: contaplexImage,
                alt: 'Fintech SaaS Interface',
            }}
            callToAction={{
                target: '_blank',
                text: 'Learn more',
                icon: 'tabler:chevron-right',
                href: 'https://contaplex.com', // Replace with actual link when available
  }}
    >
        <Fragment slot="content">
            <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
                Project: <br/><span class="text-2xl">Contaplex – LATAM Fintech Automation Tool</span>
            </h3>
        </Fragment>

        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
        </Fragment>
    </Content>


    <!-- Testimonials Widget *********** -->

    <Testimonials
            id="testimonials"
            title="Client testimonials"
            subtitle="Discover what clients have to say about their experiences working with me."
            testimonials={[
                {
                    testimonial: `David is a great developer, he did outstanding work.`,
                    name: 'Daniel H',
                    job: 'PHP Senior Developer',
                    image: {
                        src: 'https://images.unsplash.com/photo-1500648767791-00dcc994a43e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
                        alt: 'Daniel H Image',
                    },
                },
                {
                    testimonial: `David is a guy and very professional, thanks so much David.`,
                    name: 'Lender N',
                    job: 'CEO',
                    image: {
                        src: 'https://images.unsplash.com/photo-1554151228-14d9def656e4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=772&q=80',
                        alt: 'Emily Martinez Image',
                    },
                },
                {
                    testimonial: `Working with David was a game-changer. He seamlessly integrated complex APIs and ensured our application's scalability. His problem-solving skills are top-notch.`,
                    name: 'Andres Araneda',
                    job: 'CEO HSD',
                    image: {
                        src: 'https://images.unsplash.com/photo-1524504388940-b1c1722653e1?ixlib=rb-4.0.3&auto=format&fit=crop&w=774&q=80',
                        alt: 'Andres Araneda Image',
                    },
                },
            ]}
    />

    <!-- CallToAction Widget *********** -->

    <CallToAction
            title="Let’s solve your toughest technical challenges"
            subtitle="Whether you’re launching a new product or scaling an existing platform, I bring 15+ years of experience to turn complex ideas into performant, maintainable software."
            actions={[
                {
                    variant: 'primary',
                    text: 'Hire me',
                    href: 'https://www.upwork.com/services/product/development-it-david-1882059583201817953?ref=project_share',
                    target: '_blank',
                },
            ]}
    />


    <!-- BlogLatestPost Widget **************** -->
    <BlogLatestPosts
            id="blog"
            title="Insights from a Full-Stack Developer"
            information={`From scalable architecture and API integrations to practical tips in Laravel, Vue.js, and beyond—explore in-depth articles that reflect my hands-on experience and help fellow developers, teams, and businesses build smarter, faster, and better.`}
    >
        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
        </Fragment>
    </BlogLatestPosts>

</Layout>
